<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <title>Profile Home</title>
    <link rel="stylesheet" href="main.css">
</head>
<body>
    <%- include('partials/navbar/') %>

    <% if (user) { %>
        <h1 class="mx-auto pt-5 text-center">Welcome, <%= user.displayName || user.username %></h1>
    <% } %>

        <h5 class="mx-auto text-center mb-3">View your logs below</h5>

<div class="container">
    <% logs.sort((a, b) => b.date - a.date) %>
    <% let index = 1; %>   
    <% logs.forEach(log => { %>
    <div class="accordion mx-auto">
        <div class="accordion-item">
            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= index %>" aria-expanded="true" aria-controls="collapse<%= index %>">
                <h5 class="accordion-header"><%= log.date %></h5>
            </button>
            <div id="collapse<%= index %>" class="accordion-collapse collapse hide" data-bs-parent="#accordionExample">
                <div class="accordion-body d-flex">
                    <div class="text-content">
                    <p>
                        Workout 1: <%= log.workout1 %> <br>
                        Workout 2: <%= log.workout2 %> <br>
                        Reading Notes: <%= log.readingNotes %> <br>
                        Other Notes: <%= log.otherNotes %> <br>
                        Posted By <%= log.user.username %> <br>
                    </p>
                    <% if (currentUser && log.user._id.equals(currentUser._id)) {%>
                        <div class="d-flex">
                            <a href="/edit/<%= log._id %>" class="btn btn-primary mx-2">Edit</a>

                            <form action="/delete/<%= log._id %>" method="POST">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                    <div class="image-content ms-auto">
                        <img src="<%= log.image %>" alt="Log Image" class="img-fluid img-small mx-auto">
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <% index++; %>
    <% }) %>

    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>